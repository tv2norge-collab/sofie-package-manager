{
    "name": "@html-renderer/app",
    "version": "1.50.2",
    "description": "HTML-renderer",
    "private": true,
    "scripts": {
        "build": "yarn rimraf dist && yarn build:main",
        "build:main": "tsc -p tsconfig.json",
        "build-win32": "node ../../../scripts/build-win32.mjs html-renderer.exe && node ../../../scripts/copy-natives.js win32-x64",
        "__test": "jest",
        "start": "node dist/index.js"
    },
    "dependencies": {
        "@html-renderer/generic": "1.50.2"
    },
    "prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
    "engines": {
        "node": ">=18"
    },
    "lint-staged": {
        "*.{js,css,json,md,scss}": [
            "prettier"
        ],
        "*.{ts,tsx}": [
            "eslint"
        ]
    },
    "devDependencies": {
        "lerna": "^6.6.1",
        "rimraf": "^5.0.5"
    }
}
